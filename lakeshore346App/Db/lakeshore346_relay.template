}

record(mbbi, "$(P)$(R)RLY$(RELAY):RELAY_COND") {
    field(ZRVL, "0") field(ZRST, "Low Alarm")
    field(ONVL, "1") field(ONST, "High Alarm")
    field(TWVL, "2") field(TWST, "Either Low or High")
    field(THVL, "3") field(THST, "Both Low or High")
}

